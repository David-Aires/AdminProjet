acl internals {
  #add internal networks
};

view internal {
    match-clients { internals; };
    recursion yes;
    allow-recursion { internals; };
    zone "wt15.ephec-ti.be" {
        type master;
        file "/etc/bind/db.int.wt15.ephec-ti.be";
    };
};

view external {
    match-clients { any; };
    zone "wt15.ephec-ti.be" {
        type master;
        file "/etc/bind/db.wt15.ephec-ti.be";
    };
};
